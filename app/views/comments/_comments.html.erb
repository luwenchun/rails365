<% cache @comments do %>
  <div class="comments">
    <div class="total text-muted"><%= @comments.count %> 条评论 </div>
    <% if @comments.empty? %>
      <div class="empty-block">
        暂无评论~~
      </div>
    <% else %>
      <ul class="media-list">
        <%= render @comments %>
      </ul>
    <% end %>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $('a.fluidbox-link').fluidbox();
  });
</script>
